server {
	listen 80;
    server_name  communitydj.local;
    access_log  /var/log/nginx/communitydj-access.log;
    error_log	/var/log/nginx/communitydj-error.log;

    location / {
        alias /the_app/static/;
    }

}

server {
    listen 80;
    server_name api.communitydj.local;
    
	access_log  /var/log/nginx/communitydj-api-access.log;
    error_log	/var/log/nginx/communitydj-api-error.log;

    location / {
        proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
        proxy_set_header Host $http_host;
        proxy_redirect off;

        proxy_pass   http://app_server;
    }
}